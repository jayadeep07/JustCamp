<% layout("layouts/boilerplate") %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Campgrounds</h1>
            <% if(currentUser){ %>
                <a class="btn btn-primary btn-md-lg btn-sm" href="/campgrounds/new">Add new campground</a>
                <% } %>
        </div>

        <div class="row">
            <% for (let i of camps) { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= i.image %>" class="card-img-top img-fluid fixed-size-img" alt="camp image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= i.title %>
                            </h5>
                            <p class="card-text">
                                <%= i.description %>
                            </p>
                            <p class="text-muted">
                                <i class="bi bi-geo-alt-fill"></i>
                                <%= i.location %>
                            </p>
                            <a class="btn btn-dark mt-auto" href="/campgrounds/<%= i._id %>">View</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <style>
        .fixed-size-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
    </style>