<% layout("layouts/boilerplate") %>

    <div class="container mt-2">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <h3 class="text-center mb-4">Add New Campground</h3>
                <form action="/campgrounds" method="post" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="camp[title]" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="camp[location]" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">â‚¹</span>
                            <input class="form-control" type="text" id="price" placeholder="0.00" name="camp[price]"
                                required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image URL</label>
                        <input class="form-control" type="text" id="image" placeholder="image url" name="camp[image]"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="camp[description]" rows="5"
                            required></textarea>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">Submit</button>
                        <a class="btn btn-dark" href="/campgrounds">Back to Campgrounds</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br>

    <style>
        @media (max-width: 576px) {
            .container {
                padding: 0 15px;
            }
        }
    </style>